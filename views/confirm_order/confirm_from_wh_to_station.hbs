<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/css/confirm_order.css">

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<div class="container mt-5 px-2">
    <div class="table-responsive">
        <table class="table table-responsive caption-top text-center">
            <caption style="font-size: 1.1rem;"><strong>Xác nhận <span
                        style="color: brown;">{{desStation.name}}</span> đã nhận được các lô hàng gửi về từ
                    <span style="color: brown;">{{originWarehouse.name}}</span>:</strong></caption>
            <thead>
                <tr style="background-color: #eeeeee; vertical-align: middle;">
                    <th class="border-0 text-start" scope="col" width="16%">Mã lô hàng</th>
                    <th class="border-0" scope="col" width="1%">Ngày gửi</th>
                    <th class="border-0" scope="col" width="18%">Mã GDV gửi</th>
                    <th class="border-0" scope="col" width="17%">Số mã hàng</th>
                    <th class="border-0" scope="col" width="32%">Tình trạng</th>
                    <th class="border-0 text-end" scope="col" width="16%"><span>Hành động</span></th>
                </tr>
            </thead>
            <tbody>
                {{#each containers}}
                <tr>
                    <td class="text-start">{{this.containerCode}}</td>
                    <td>{{formatDate this.createdAt}}</td>
                    <td><img src="https://i.imgur.com/nmnmfGv.png" width="25"> {{this.employeeId}}</td>
                    <td>{{this.postIds.length}}</td>
                    <td><span class="rounded-pill align-items-center"
                            style="background-color: rgb(251, 242, 178); padding: 1px 9px"><i class="fa fa-circle"
                                style="font-size: 11px; color: rgb(243, 183, 31)"></i><span class="ms-1"
                                style="color: rgb(231, 162, 14); font-weight: bold;">Đang trung chuyển</span></span>
                    </td>
                    <td class="text-end"><a class="fw-bolder confirm-link" href="#">Xác
                            nhận</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</div>