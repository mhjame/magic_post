<div class="event-schedule-area-two bg-color pad100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title text-center">
                    <div class="title-text">
                        <h2>Các đơn hàng bạn đã gửi tại Magic Post</h2>
                    </div>
                    <p style="margin-bottom: 30px">
                        Cảm ơn bạn đã sử dụng dịch vụ của chúng tôi!
                    </p>
                </div>
            </div>
            <!-- /.col end-->
        </div>




        <div class="container">

            <div class="row height d-flex justify-content-center align-items-center">

                <div class="col-md-6">
                    <form action="/search_post">

                        <div class="search form">
                            <i class="fa fa-search"></i>
                            <input type="search" name="searchValue" class="form-control form-input"
                                placeholder="Nhập mã đơn hàng để tìm...">

                        </div>
                    </form>

                </div>

            </div>

        </div>




        <!-- row end-->
        <div class="row">
            <div class="col-lg-12">

                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade active show" id="home" role="tabpanel">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="thead-light">
                                    <tr>

                                        <th scope="col" class="text-center">Mã đơn hàng</th>
                                        <th class="text-center" scope="col" style="vertical-align: middle;">Tên hàng</th>
                                        <th scope="col" style="vertical-align: middle;">Thông tin</th>
                                        <th class="text-center" scope="col" style="vertical-align: middle;">Tình trạng
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr class="inner-box">
                                        <th scope="row">
                                            <div class="event-date">
                                                <p class="order-id">{{post.id}}</p>

                                            </div>
                                        </th>
                                        <td>

                                            <div class="post-name">
                                                <h4>{{post.name}}</h4>

                                            </div>
                                        </td>
                                        <td>
                                            <div class="event-wrap">
                                                <p><i class="fa fa-user"></i><strong> Người gửi:</strong>
                                                    {{post.senderName}}</p>
                                                <p><i class="fa fa-address-book"></i><strong> Địa chỉ người
                                                        gửi:</strong> {{post.senderAddress}}
                                                </p>
                                                <p><i class="fa fa-phone"></i><strong> SĐT người gửi:</strong>
                                                    {{post.senderPhoneNumber}}</p>
                                                <p><i class="fa fa-user"></i><strong> Người nhận:</strong>
                                                    {{post.receiverName}}</p>
                                                <p><i class="fa fa-address-book"></i><strong> Địa chỉ người
                                                        nhận:</strong>
                                                    {{post.receiverAddress}}</p>
                                                <p><i class="fa fa-phone"></i><strong> SĐT người nhận:</strong>
                                                    {{post.receiverPhoneNumber}}</p>
                                                <p><i class="fa fa-cube"></i><strong> Trọng lượng:</strong>
                                                    {{post.weight}}</p>
                                                <p><i class="fa fa-money-bill"></i><strong> Cước phí:</strong>
                                                    {{post.cost}} ({{renderPayState
                                                    post.payState}})</p>

                                            </div>
                                        </td>

                                        <td>
                                            <p><i class="fa fa-check-square-o"></i><strong> Tình trạng:
                                                </strong>{{renderStatus post.status}}
                                            </p>
                                            <p><i class="fa fa-calendar-minus-o"></i><strong> Ngày gửi:
                                                </strong>{{formatDate post.createdAt}}
                                            </p>
                                            <p><i class="fa fa-calendar-check-o"></i><strong> Ngày nhận:
                                                </strong>{{formatDate
                                                post.timeReceived}}</p>



                                            <div class="track">
                                                <div class="step active"> <span class="icon"> <i
                                                            class="fa fa-first-order"></i> </span> <span class="text">Đã
                                                        xác nhận</span> </div>
                                                <div class="transship step" data-status='{{post.status}}'> <span
                                                        class="icon"> <i class="fa fa-truck"></i> </span> <span
                                                        class="text">Đang trung chuyển</span> </div>
                                                <div class="shipment step" data-status='{{post.status}}'> <span
                                                        class="icon"> <i class="fa fa-user"></i> </span> <span
                                                        class="text">
                                                        Đang giao </span> </div>
                                                <div class="received step" data-status='{{post.status}}'> <span
                                                        class="icon"> <i class="fa fa-check"></i> </span> <span
                                                        class="text">Đã nhận hàng</span> </div>
                                            </div>

                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>

            </div>
            <!-- /col end-->
        </div>
        <!-- /row end-->
    </div>
</div>

<script>


    const transshipSteps = document.querySelectorAll(".transship");
    const shipSteps = document.querySelectorAll(".shipment");
    const receivedSteps = document.querySelectorAll(".received");



    for (const step of transshipSteps) {
        const status = step.dataset.status;

        if (status !== 'at sStation') {
            step.classList.add('active');
        }
    }

    for (const step of shipSteps) {
        const status = step.dataset.status;


        if (status === 'received' || status === 'on way to receiver') {
            step.classList.add('active');
        }
    }


    for (const step of receivedSteps) {
        const status = step.dataset.status;

        if (status === 'received') {
            step.classList.add('active');
        }
    }




</script>









