<div class="event-schedule-area-two bg-color pad100">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title text-center">
          <div class="title-text">
            <h2>Các đơn hàng bạn đã gửi tại Magic Post</h2>
          </div>
          <p style="margin-bottom: 25px">
            Cảm ơn bạn đã sử dụng dịch vụ của chúng tôi!
          </p>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-lg-12">

        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade active show" id="home" role="tabpanel">
            <div class="table-responsive">
              <table id="sortTable" class="table">
                <thead class="thead-light">
                  <tr>

                    <th class="text-center" scope="col" width="14%">Mã đơn hàng</th>
                    <th class="text-center" scope="col" width="13%" style="vertical-align: middle;">Tên hàng</th>
                    <th scope="col" width="28%" style="vertical-align: middle;">Thông tin</th>
                    <th class="text-center" scope="col" width="45%" style="vertical-align: middle;">Tình trạng</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each posts}}
                  <tr class="inner-box">

                    <td scope="row">
                      <div class="event-date">
                        <p class="order-id">{{this.id}}</p>

                      </div>
                    </td>

                    <td>

                      <div class="post-name">
                        <h4>{{this.name}}</h4>

                      </div>
                    </td>
                    <td>
                      <div class="event-wrap">
                        <p><i class="fa fa-user"></i><strong> Người gửi:</strong> {{this.senderName}}</p>
                        <p><i class="fa fa-address-book"></i><strong> Địa chỉ người gửi:</strong> {{this.senderAddress}}
                        </p>
                        <p><i class="fa fa-phone"></i><strong> SĐT người gửi:</strong> {{renderPhoneNumber
                          this.senderPhoneNumber}}</p>
                        <p><i class="fa fa-user"></i><strong> Người nhận:</strong> {{this.receiverName}}</p>
                        <p><i class="fa fa-address-book"></i><strong> Địa chỉ người nhận:</strong>
                          {{this.receiverAddress}}</p>
                        <p><i class="fa fa-phone"></i><strong> SĐT người nhận:</strong> {{renderPhoneNumber
                          this.receiverPhoneNumber}}</p>
                        <p><i class="fa fa-cube"></i><strong> Trọng lượng:</strong> {{this.actualWeight}} kg</p>
                        <p><i class="fa fa-money"></i><strong> Cước phí:</strong> {{renderCost this.cost}}
                          ({{renderPayState
                          this.payState}})</p>

                      </div>
                    </td>

                    <td>
                      <p><i class="fa fa-check-square-o"></i><strong> Tình trạng: </strong>{{renderStatus this.status}}
                      </p>
                      <p><i class="fa fa-calendar-minus-o"></i><strong> Ngày gửi: </strong>{{formatDate this.createdAt}}
                      </p>
                      <p><i class="fa fa-calendar-check-o"></i><strong> Ngày nhận: </strong>{{formatDate
                        this.timeReceived}}</p>
                      <p><i class="fa fa-road"></i><strong> Tiến trình chuyển phát:</strong></p>

                      <div class="track">
                        <div class="sender-station step" data-status='{{this.status}}'> <span class="icon"> <i
                              class="fa fa-first-order"></i> </span> <span class="text">
                            {{#with (lookup ../postRoutine this.id)}}
                            {{senderStation.name}}
                            {{/with}}
                          </span>
                        </div>
                        <div class="sender-warehouse step" data-status='{{this.status}}'> <span class="icon"> <i
                              class="fa fa-truck"></i> </span> <span class="text">
                            {{#with (lookup ../postRoutine this.id)}}
                            {{senderWarehouse.name}}
                            {{/with}}
                          </span>
                        </div>
                        <div class="receiver-warehouse step" data-status='{{this.status}}'>
                          <span class="icon"> <i class="fa fa-cubes"></i> </span> <span class="text">
                            {{#with (lookup ../postRoutine this.id)}}
                            {{receiverWarehouse.name}}
                            {{/with}}
                          </span>
                        </div>
                        <div class="receiver-station step" data-status='{{this.status}}'> <span class="icon"> <i
                              class="fa fa-archive"></i> </span> <span class="text">
                            {{#with (lookup ../postRoutine this.id)}}
                            {{receiverStation.name}}
                            {{/with}}
                          </span>
                        </div>
                        <div class="receiver step" data-status='{{this.status}}'> <span class="icon"> <i
                              class="fa fa-user"></i> </span> <span class="text">Người nhận</span> </div>
                      </div>

                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>

        </div>

      </div>
      <!-- /col end-->
    </div>
    <!-- /row end-->
  </div>
</div>

<script>
  const postTracks = document.querySelectorAll("tbody td .track");

  for (const track of postTracks) {
    const senderStationStep = track.querySelector(".sender-station.step");
    const senderWarehouseStep = track.querySelector(".sender-warehouse.step");
    const receiverWarehouseStep = track.querySelector(".receiver-warehouse.step");
    const receiverStationStep = track.querySelector(".receiver-station.step");
    const receiverStep = track.querySelector(".receiver.step");
    const postStatus = senderStationStep.dataset.status;

    switch (postStatus) {
      case 'at sStation':
        senderStationStep.classList.add('half-active');
        break;
      case 'on way to sWarehouse':
        senderStationStep.classList.add('active');
        break;
      case 'at sWarehouse':
        senderStationStep.classList.add('active');
        senderWarehouseStep.classList.add('half-active');
        break;
      case 'on way to rWarehouse':
        senderStationStep.classList.add('active');
        senderWarehouseStep.classList.add('active');
        break;
      case 'at rWarehouse':
        senderStationStep.classList.add('active');
        senderWarehouseStep.classList.add('active');
        receiverWarehouseStep.classList.add('half-active');
        break;
      case 'on way to rStation':
        senderStationStep.classList.add('active');
        senderWarehouseStep.classList.add('active');
        receiverWarehouseStep.classList.add('active');
        break;
      case 'at rStation':
        senderStationStep.classList.add('active');
        senderWarehouseStep.classList.add('active');
        receiverWarehouseStep.classList.add('active');
        receiverStationStep.classList.add('half-active');
        break;
      case 'on way to receiver':
        senderStationStep.classList.add('active');
        senderWarehouseStep.classList.add('active');
        receiverWarehouseStep.classList.add('active');
        receiverStationStep.classList.add('active');
        break;
      case 'received':
        senderStationStep.classList.add('active');
        senderWarehouseStep.classList.add('active');
        receiverWarehouseStep.classList.add('active');
        receiverStationStep.classList.add('active');
        receiverStep.classList.add('active');
        break;
      case 'returned':
        senderStationStep.classList.add('active');
        senderWarehouseStep.classList.add('active');
        receiverWarehouseStep.classList.add('active');
        receiverStationStep.classList.add('active');
        break;
    }
  }

</script>



