<div class="event-schedule-area-two bg-color pad100">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title text-center">
          <div class="title-text">
            <h2>Các đơn hàng bạn đã gửi tại Magic Post</h2>
          </div>
          <p style="margin-bottom: 25px">
            Cảm ơn bạn đã sử dụng dịch vụ của chúng tôi!
          </p>
        </div>
      </div>
    </div>




    <div class="container">

      <div class="row height d-flex justify-content-center align-items-center">

        <div class="col-md-6">
          <form action="/search_post">

            <div class="search form">
              <i class="fa fa-search"></i>
              <input type="search" name="searchValue" class="form-control form-input"
                placeholder="Nhập mã đơn hàng để tìm...">

            </div>
          </form>

        </div>

      </div>

    </div>




    <!-- row end-->
    <div class="row">
      <div class="col-lg-12">

        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade active show" id="home" role="tabpanel">
            <div class="table-responsive">
              <table id="sortTable" class="table">
                <thead class="thead-light">
                  <tr>

                    <th scope="col" class="text-center">Mã đơn hàng</th>
                    <th class="text-center" scope="col" style="vertical-align: middle;">Tên hàng</th>
                    <th scope="col" style="vertical-align: middle;">Thông tin</th>
                    <th class="text-center" scope="col" style="vertical-align: middle;">Tình trạng</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each posts}}
                  <tr class="inner-box">

                    <td scope="row">
                      <div class="event-date">
                        <p class="order-id">{{this.id}}</p>

                      </div>
                    </td>

                    <td>

                      <div class="post-name">
                        <h4>{{this.name}}</h4>

                      </div>
                    </td>
                    <td>
                      <div class="event-wrap">
                        <p><i class="fa fa-user"></i><strong> Người gửi:</strong> {{this.senderName}}</p>
                        <p><i class="fa fa-address-book"></i><strong> Địa chỉ người gửi:</strong> {{this.senderAddress}}
                        </p>
                        <p><i class="fa fa-phone"></i><strong> SĐT người gửi:</strong> {{this.senderPhoneNumber}}</p>
                        <p><i class="fa fa-user"></i><strong> Người nhận:</strong> {{this.receiverName}}</p>
                        <p><i class="fa fa-address-book"></i><strong> Địa chỉ người nhận:</strong>
                          {{this.receiverAddress}}</p>
                        <p><i class="fa fa-phone"></i><strong> SĐT người nhận:</strong> {{this.receiverPhoneNumber}}</p>
                        <p><i class="fa fa-cube"></i><strong> Trọng lượng:</strong> {{this.weight}} kg</p>
                        <p><i class="fa fa-money"></i><strong> Cước phí:</strong> {{this.cost}} VNĐ ({{renderPayState
                          this.payState}})</p>

                      </div>
                    </td>

                    <td>
                      <p><i class="fa fa-check-square-o"></i><strong> Tình trạng: </strong>{{renderStatus this.status}}
                      </p>
                      <p><i class="fa fa-calendar-minus-o"></i><strong> Ngày gửi: </strong>{{formatDate this.createdAt}}
                      </p>
                      <p><i class="fa fa-calendar-check-o"></i><strong> Ngày nhận: </strong>{{formatDate
                        this.timeReceived}}</p>



                      <div class="track">
                        <div class="step active"> <span class="icon"> <i class="fa fa-first-order"></i> </span> <span
                            class="text">Đã xác nhận</span> </div>
                        <div class="transship step" data-status='{{this.status}}'> <span class="icon"> <i
                              class="fa fa-truck"></i> </span> <span class="text">Đang trung chuyển</span> </div>
                        <div class="shipment step" data-status='{{this.status}}'> <span class="icon"> <i
                              class="fa fa-user"></i> </span> <span class="text">
                            Đang giao </span> </div>
                        <div class="received step" data-status='{{this.status}}'> <span class="icon"> <i
                              class="fa fa-check"></i> </span> <span class="text">Đã nhận hàng</span> </div>
                      </div>

                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>

        </div>

      </div>
      <!-- /col end-->
    </div>
    <!-- /row end-->
  </div>
</div>

<script>


  const transshipSteps = document.querySelectorAll(".transship");
  const shipSteps = document.querySelectorAll(".shipment");
  const receivedSteps = document.querySelectorAll(".received");



  for (const step of transshipSteps) {
    const status = step.dataset.status;

    if (status !== 'at sStation') {
      step.classList.add('active');
    }
  }

  for (const step of shipSteps) {
    const status = step.dataset.status;


    if (status === 'received' || status === 'on way to receiver') {
      step.classList.add('active');
    }
  }


  for (const step of receivedSteps) {
    const status = step.dataset.status;

    if (status === 'received') {
      step.classList.add('active');
    }
  }

</script>



